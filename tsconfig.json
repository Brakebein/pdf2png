{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",                    
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2016"],
    "typeRoots": ["./node_modules/@types/"],
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
